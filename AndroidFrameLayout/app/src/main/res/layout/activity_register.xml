<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yaoyao.studyframelayout.androidframelayout.RegisterActivity">

    <include layout="@layout/comm_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textSize="16sp" />

            <com.yaoyao.studyframelayout.androidframelayout.widget.ClearableEditText
                android:id="@+id/text_phone"
                style="@style/LoginEdittextStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey800" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="验证码"
                android:textSize="16sp" />

            <com.yaoyao.studyframelayout.androidframelayout.widget.ClearableEditText
                android:id="@+id/text_code"
                style="@style/LoginEdittextStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.8"
                android:hint="发送验证码"
                android:inputType="number"
                android:maxLength="6" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.2">

                <Button
                    android:id="@+id/btn_get_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发送验证码"
                    android:textColor="@color/dark_yellow"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_weight="2.8"
                android:background="@color/grey800" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="密码"
                android:textSize="16sp" />

            <com.yaoyao.studyframelayout.androidframelayout.widget.ClearableEditText
                android:id="@+id/text_password"
                style="@style/LoginEdittextStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey800" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="注册" />

        <Button
            android:id="@+id/btn_to_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="已有账号?直接登录"
            android:textColor="@color/dark_yellow" />

        <Button
            android:id="@+id/btn_to_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:text="登录"
            android:textColor="@color/grey700" />

    </LinearLayout>
</LinearLayout>
